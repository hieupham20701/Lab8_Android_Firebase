<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="238dp"
        android:layout_height="28dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="56dp"
        android:text="CREATE NEW ACCOUNT"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="56dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:srcCompat="@drawable/group_3" />

    <EditText
        android:id="@+id/edt_yourName"
        android:layout_width="287dp"
        android:layout_height="47dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Your Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edt_Email"
        android:layout_width="284dp"
        android:layout_height="49dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/edt_yourName"
        app:layout_constraintTop_toBottomOf="@+id/edt_yourName" />

    <EditText
        android:id="@+id/edt_typePass"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Type Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/edt_Email"
        app:layout_constraintTop_toBottomOf="@+id/edt_Email" />

    <EditText
        android:id="@+id/edt_confirmPass"
        android:layout_width="284dp"
        android:layout_height="47dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Type Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/edt_typePass"
        app:layout_constraintTop_toBottomOf="@+id/edt_typePass" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="103dp"
        android:background="@drawable/intersect__2_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="175dp"
            android:layout_height="43dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="44dp"
            android:text="Already have an account?"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="86dp"
            android:layout_height="42dp"
            android:layout_marginStart="4dp"
            android:text="Sign in"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#EF77B0"
        android:text="REGISTER"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_confirmPass"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edt_confirmPass"
        app:layout_constraintTop_toBottomOf="@+id/edt_confirmPass" />

    <TextView
        android:id="@+id/txt_registerGG"
        android:layout_width="214dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:text="REGISTER WITH GOOGLE"
        android:textAlignment="center"
        android:textColor="#2D58F3"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/txt_registerGG"
        app:layout_constraintTop_toTopOf="@+id/txt_registerGG"
        app:srcCompat="@drawable/grommet_icons_google" />

</androidx.constraintlayout.widget.ConstraintLayout>